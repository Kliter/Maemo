<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		xmlns:app="http://schemas.android.com/tools"
		android:orientation="vertical"
		android:layout_margin="8dp"
		card_view:cardElevation="2dp"
		android:foreground="?android:attr/selectableItemBackground">
	
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center">
		
		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/rlFactContainer">
			
			<ImageView
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/ivFact"
					android:src="@drawable/ic_fact"/>
			
			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:id="@+id/tilCardFactText"
					app:errorEnabled="true"
					app:counterEnabled="true"
					app:hintEnabled="true"
					app:hintAnimationEnabled="true"
					android:layout_toEndOf="@+id/ivFact">
				
				<android.support.design.widget.TextInputEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/tietCartFactText"
						android:hint="@string/HintFact"
						android:inputType="text"
						android:maxLines="1"
						style="@style/TextAppearance.MaterialComponents.Body1"/>
			
			</android.support.design.widget.TextInputLayout>
			
			<ImageView
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/ivAbstract"
					android:layout_below="@id/ivFact"
					android:src="@drawable/ic_abstract"/>
			
			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:id="@+id/tilCardAbstractText"
					android:layout_below="@id/tilCardFactText"
					app:errorEnabled="true"
					app:counterEnabled="true"
					app:hintEnabled="true"
					app:hintAnimationEnabled="true"
					android:layout_toEndOf="@+id/ivAbstract">
				
				<android.support.design.widget.TextInputEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/tietCartAbstractText"
						android:hint="@string/HintAbstract"
						android:inputType="text"
						android:maxLines="1"
						style="@style/TextAppearance.MaterialComponents.Body1"/>
			
			</android.support.design.widget.TextInputLayout>
			
			<ImageView
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:id="@+id/ivDiversion"
					android:layout_below="@id/ivAbstract"
					android:src="@drawable/ic_diversion"/>
			
			<android.support.design.widget.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:id="@+id/tilCardDiversionText"
					android:layout_below="@id/tilCardAbstractText"
					app:errorEnabled="true"
					app:counterEnabled="true"
					app:hintEnabled="true"
					app:hintAnimationEnabled="true"
					android:layout_toEndOf="@+id/ivFact">
				
				<android.support.design.widget.TextInputEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/tietCartDiversionText"
						android:hint="@string/HintDiversion"
						android:inputType="text"
						android:maxLines="1"
						style="@style/TextAppearance.MaterialComponents.Body1"/>
			
			</android.support.design.widget.TextInputLayout>
		</RelativeLayout>
	</RelativeLayout>
</android.support.v7.widget.CardView>