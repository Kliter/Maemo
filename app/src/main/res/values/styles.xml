<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="MemoTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:background">@color/colorTransparent</item>
    </style>
    
    <style name="MemoContent" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="WordTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WordContent" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorSubBlack</item>
    </style>

</resources>
